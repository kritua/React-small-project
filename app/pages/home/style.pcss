:local {

    .home {
        height: 100vh;
        color: #fff;
        background: #1b2838;
        overflow: hidden;

        &__wrapper {
            height: 100%;
            width: 100%;
            margin: 0 auto;

            &_header {
                display: flex;
                align-items: center;
            }
        }

        &__header {
            background: #171a21;
            width: 100%;
            padding: 20px 40px;
            box-sizing: border-box;
        }

        &__heading {
            margin-left: 50px;
            font-weight: 300;
        }

        &__form-wrapper {
            max-width: 600px;
            margin: 15px auto;
        }

        &__form {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        &__form-heading {
            margin: 15px 0;
        }

        &__inputs {
            flex-basis: 100%;
            display: flex;
            justify-content: space-between;
        }

        &__label {
            width: 30%;
            transition: all 200ms;

            &_focused {
                flex-grow: 1;
            }

            &_not-focused {
                flex-shrink: 1;
            }
        }

        &__input {
            border: 1px solid #ccc;
            border-radius: 3px;
            padding: 10px;
            width: 100%;
            box-sizing: border-box;
        }

        &__title {
            display: block;
            margin-bottom: 5px;
        }

        &__pending,
        &__error {
            display: flex;
            align-items: center;
            margin: 15px auto 0;
            background: #fff6da;
            padding: 5px 10px;
            flex-basis: 100%;
            height: 40px;
            color: #585858;
            max-width: 600px;
        }

        &__pending-wrapper {
            flex-basis: 100%;
            display: flex;
            justify-content: center;
        }

        &__pending {
            background: none;
            color: #fff;
            justify-content: center;
        }

        &__error-icon {
            width: 20px;
            height: 20px;
            min-width: 20px;
            background-color: #ff4d00;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-weight: 700;
            margin-right: 10px;
            border-radius: 50%;
        }

        &__loader {
            margin-right: 10px;
        }

        &__button {
            margin-top: 15px;
        }

        &__text {
            margin: 15px 0;

            &_nomargin {
                margin: 0;
            }

            &_game {
                margin: 7px 0;
            }
        }

        &__gamelist {
            overflow-y: scroll;
        }

        &__gamelist-wrapper {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            padding-bottom: 30px;
        }

        &__gamelist-block {
            margin: 15px auto;
            max-width: 1200px;
        }

        &__gamelist-header {
            font-weight: 400;
            margin: 15px 0;

            span {
                font-weight: 700;
                color: #66c0f4;
            }
        }

        &__game {
            flex-basis: 24%;
            padding: 10px 15px;
            display: block;
            box-sizing: border-box;
            margin-bottom: 1%;
            text-decoration: none;
            color: inherit;
            background: rgba(0, 0, 0, 0.2);
            transition: 0.2s ease all;

            &:hover {
                background: rgba(255, 255, 255, 0.2);
            }
        }

        &__image {
            max-width: 100%;
            height: auto;
        }

        &__no-games {
            text-align: center;
        }
    }
}
